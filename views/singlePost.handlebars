<div class="card">
    <h5 class="card-header"><a href={{post.link}}>{{post.title}}</a></h5>
    <div class="card-body">
        <div class="row">
            <div class="col">
                {{#if post.thumbnail}}
                <a href={{post.link}}><img class="img-responsvie" style="width: 130px; height: 130px;"
                        src={{post.thumbnail}}></a>
                {{else}}
                <a href={{post.link}}><img class="img-responsvie" style="width: 130px; height: 130px;"
                        src="/assets/img/Reddit-icon.png"></a>
                {{/if}}
            </div>
        </div>
    </div>
</div>

<div class="row mt-3">
    {{#if post.comment}}
    <div class="col-12 mb-3">
        <h3>Comments:</h3>
    </div>
    {{#each post.comment}}
    <div class="col-12 mb-3">
        {{> comment}}
    </div>
    {{/each}}
    {{else}}
    <div class="col-12 mb-3">
        {{> noComment}}
    </div>
    {{/if}}
</div>